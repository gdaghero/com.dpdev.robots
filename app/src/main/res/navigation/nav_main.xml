<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.dpdev.robots.screens.game.GameFragment"
        android:label="@string/screen_game_title"
        tools:layout="@layout/fragment_game">
        <action
            android:id="@+id/action_gameFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dpdev.robots.screens.game.settings.SettingsFragment"
        android:label="@string/screen_settings_title"
        tools:layout="@layout/fragment_settings" />
</navigation>
